<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill"
    tools:context=".MyTests.ImageViewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvOne"
        android:text="@string/greeting"/>

    <ImageView

        android:layout_marginTop="10dp"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/tvOne"
        android:src="@drawable/camera"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:text="Center"
        android:id="@+id/btnScaleCenter"/>

    <Button
        android:id="@+id/btnScaleCenterCrop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginLeft="8dp"
        android:text="Center Crop" />

    <Button
        android:id="@+id/btnScaleCenterInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScaleCenter"
        android:text="CenterInside" />

    <Button
        android:id="@+id/btnScaleFitCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScaleCenterCrop"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginLeft="8dp"
        android:text="FitCenter" />


    <Button
        android:id="@+id/btnScaleFitXy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScaleCenterInside"
        android:text="FitXy" />

    <Button
        android:id="@+id/btnScaleFitEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScaleFitCenter"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginLeft="8dp"
        android:text="FitEnd" />


    <Button
        android:id="@+id/btnscaleFitStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScaleFitXy"
        android:text="FitStart" />

    <Button
        android:id="@+id/btnScaleMatrix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnScaleFitEnd"
        android:layout_alignEnd="@id/imageView"
        android:layout_marginLeft="8dp"
        android:text="Matrix" />

</RelativeLayout>