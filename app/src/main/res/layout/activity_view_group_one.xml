<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".viewGroup.RelativeLayot">
    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One"
        android:id="@+id/btnOne"/>
    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Two"
        android:id="@+id/btnTwo"
        android:layout_toEndOf="@id/btnOne"/>

    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Three"
        android:id="@+id/btnThree"
        android:layout_toEndOf="@id/btnTwo"/>
    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Four"
        android:id="@+id/btnFour"
        android:layout_toEndOf="@id/btnThree"/>

    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Five"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnFive"
        android:layout_below="@id/btnThree"/>

    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Six"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSix"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />


    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seven"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSeven"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        />



    <Button
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eignt"
        android:layout_centerInParent="true"
        android:id="@+id/btnEight"

        />

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello world one"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btnFive"
        android:id="@+id/tvOne"

        />

    <TextView
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello world Two"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:layout_below="@+id/btnEight"
        android:id="@+id/tvTwo"

        />





</RelativeLayout>